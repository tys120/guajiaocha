<!-- 交通违法-历史记录 -->
<view class="traffic-offence-record-wraper {{containerClassName}}">
  <view class="traffic-offence-record-title">
    <view class="traffic-offence-record-title-left">
      <image src="{{data.titleIconUrl}}" mode="" />
      <view>{{data.title}}</view>
    </view>
    <view class="traffic-offence-record-title-right" a:if="{{data.showDetail}}" onTap="onDetail" data-info="{{data}}">
      <view>查看详情</view>
      <view></view>
    </view>
  </view>
  <view class="traffic-offence-record-content">
    <view class="traffic-offence-record-value">
      <view>{{data.valueUnit}}</view>
      <view>{{data.fee}}</view>
    </view>
    <view class="traffic-offence-record-row">
      <view>状态</view>
      <view style="color:{{data.statusColor?data.statusColor:defaultStatusColor}}">{{data.status}}</view>
    </view>
    <view class="traffic-offence-record-row">
      <view>来源</view>
      <view>{{data.feeKind}}</view>
    </view>
    <view class="traffic-offence-record-row">
      <view>支付方式</view>
      <view>{{data.payMode}}</view>
    </view>
    <view class="traffic-offence-record-row">
      <view>缴款时间</view>
      <view>{{data.payTime}}</view>
    </view>
  </view>
</view>